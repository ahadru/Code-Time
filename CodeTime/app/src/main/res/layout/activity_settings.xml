<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Settings"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_racherrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/rackerrank_icon" />

            <TextView
                android:id="@+id/text_rackerrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33sp"
                android:text="hackerrank"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="26sp"
                android:layout_weight="1" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_codechef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/codechef_icon" />

            <TextView
                android:id="@+id/text_codechef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="33sp"
                android:text="codechef"
                android:textSize="30sp" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70sp"
                android:layout_marginTop="26sp"
                android:layout_weight="1" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/codeforces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>